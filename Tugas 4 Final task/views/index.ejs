<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center mb-5">
      <% for( let i = 0; i < results.length; i++ ) { %> 
      <div class="col mb-3">
        <div class="card primary" style="width: 18rem; display: inline-block;">
          <div class="card-body">
            <h5 class="card-title"><a href="/task/<%= results[i].name %>"><%= results[i].name %></a></h5>
            <a href="/edit-collections/<%= results[i].id %>" class="btn btn-success">Change</a>
            <a href="/delete-collections/<%= results[i].id %>" class="btn btn-danger">Delete</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>